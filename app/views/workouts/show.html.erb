<h3 class='text-center'>Training details</h3>
<div class="row m-3">
  <div class="col text-center">
    <p><strong>Name:</strong> <%= @workout.name %></p>
    <p><strong>Date:</strong> <%= @workout.date %></p>
    <p class="mt-3"><strong>Sets:</strong></p>
    <% @workout.training_sets.each do |set| %>
      <p>
        <p>
          <strong>Exercise: </strong><%= set.exercise.name %> 
        </p>
        <%= set.repetitions %> repeated <%= set.weight || 0 %> kg
        <%= button_to 'Edit set', edit_workout_training_set_path(@workout, set), type: "button", class:"btn btn-outline-secondary mt-3 w-25", method: :get %>
        <%= button_to 'Delete set', workout_training_set_path(@workout, set), type: "button", class:"btn btn-outline-danger m-3 w-25", method: "delete" %>
      </p>
    <% end %>
  </div>
  <div class="col text-center">
      <%= button_to 'Edit workout details', edit_workout_path(@workout), type: "button", class:"btn btn-outline-secondary mt-3 w-50", method: :get %>
      <%= button_to 'Create new exercise', new_exercise_path, method: :get, type: "button", class:"btn btn-outline-secondary mt-3 w-50" %>
      <%= button_to 'Add new exercise set', new_workout_training_set_path(@workout), method: :get, type: "button", class:"btn btn-outline-secondary mt-3 w-50" %>
      <%= button_to 'Delete workout', @workout, type: "button", class:"btn btn-outline-danger mt-3 w-50", method: "delete" %>
    </div>
  </div>
</div>
