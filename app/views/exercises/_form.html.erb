<%= form_with(model: @exercise, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <br>
    <%= form.text_field :name %>
    <br>
  </div>
  <br>
  <div class="field">
    <%= form.label :description %>
    <br>
    <%= form.text_area :description %>
